@using DemoEmailApp.ViewModels
@model AddViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
       

        <div class="container">
            <div class="row justify-content-end">
                <div class="">
                    <a asp-controller="email" asp-action="List" class="btn btn-secondary">Email List</a>
                 
                </div>
            </div>


            <form method="POST" asp-controller="Email" asp-action="add" runat="server">
               
                Individual : @Html.RadioButtonFor(model => model.Status,"true")
                Bulk : @Html.RadioButtonFor(model => model.Status,"false")


                <div class="form-group">
                    <label asp-for="From"></label>
                    <input asp-for="From" class="form-control">
                 
                </div>
                <div class="form-group">
                    <label asp-for="TargetEmail.TargetEmail"></label>
                    <input asp-for="TargetEmail.TargetEmail" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Tittle"></label>
                    <input asp-for="Tittle" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Message"></label>
                    <input asp-for="Message" class="form-control">
                </div>
             
              

                <button type="submit" class="btn btn-primary mt-5 ">Submit</button>
            </form>
        </div>

    </div>
</body>
</html>
